<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="locale"
    android:padding="8dp"
    android:textDirection="locale">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/tweet_profile_picture"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:civ_border_color="@color/black"
        app:civ_border_width="1dp" />

    <TextView
        android:id="@+id/tweet_user_name"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/tweet_profile_picture"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tweet_user_handle"
        style="@style/TextAppearance.AppCompat.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/tweet_user_name"
        android:layout_toStartOf="@id/tweet_date"
        android:maxLines="1"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tweet_date"
        style="@style/TextAppearance.AppCompat.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tweet_text"
        style="@style/TextAppearance.AppCompat.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tweet_user_name"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/tweet_profile_picture"
        android:textStyle="bold" />
</RelativeLayout>